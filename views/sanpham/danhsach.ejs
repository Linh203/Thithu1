<%- include('../inc/top.ejs') %>

<div class="col-12 container-fluid">
    <h1 style="text-align: center;">Danh sach san pham</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Tên SP</th>
            <th>Ảnh SP</th>
            <th>Giá SP</th>
            <th>Số lượng</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>

        <% listSp.forEach((objSP) => { %> 
        <tr>
            <td><%= objSP._id %></td>
            <td><a href="/sp/capNhat-tt/<%= objSP._id %>" style="text-decoration: none; color: black;"><%= objSP.name %></a></td>
            <td><img src="<%= objSP.img %>" alt="" width="80" height="90"></td>
            <td><%= objSP.price %></td>
            <td><%= objSP.soLuong %></td>
            <td><%= objSP.trangThai %></td>
            <td>
                <a href="/sp/sua-sp/<%= objSP._id %>"><button type="button" class="btn"><i class="bi bi-pen-fill"></i></button></a>
                
                <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="bi bi-trash3-fill"></i>
                  </button>
                  
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="exampleModalLabel">THÔNG BÁO!</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Bạn có chắc chắn muốn xóa không?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <a href="/sp/delete-sp/<%= objSP._id %>"><button type="button" class="btn btn-primary">Delete</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
            </td>
        </tr>

        <% }) %>
    </table>
</div>

<%- include('../inc/bottom.ejs') %>